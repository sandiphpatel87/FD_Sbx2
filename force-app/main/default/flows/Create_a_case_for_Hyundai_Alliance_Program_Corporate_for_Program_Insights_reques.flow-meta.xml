    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_date</name>
        <label>Check date</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Outcome_1_of_Check_date</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>datechecking</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_a_case</targetReference>
            </connector>
            <label>Outcome 1 of Check date</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>datechecking</name>
        <dataType>Boolean</dataType>
        <expression>DAY(TODAY()) = 1</expression>
    </formulas>
    <formulas>
        <name>Description</name>
        <dataType>String</dataType>
        <expression>&quot; Update the Hyundai T3 Alliance Program insights for the month in this doc: https://docs.google.com/document/d/1F2ineO8MTdyuFGJ4WKQT7NbtelJbetwBfgUGSI3SsUs/edit and send to Jeff Cronin and Jon Bud by the 7th at the latest. Video training linked here: https://drive.google.com/file/d/1GvoB0-Tq8BJuRoh1Wvi6_v-z7552jVoX/view?usp=sharing &quot;</expression>
    </formulas>
    <formulas>
        <name>IsFifthOfMonth</name>
        <dataType>Boolean</dataType>
        <expression>DAY(TODAY()) = 5</expression>
    </formulas>
    <interviewLabel>Create a case for Hyundai Alliance Program (Corporate) for Program Insights request type {!$Flow.CurrentDateTime}</interviewLabel>
