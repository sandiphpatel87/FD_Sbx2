    <recordUpdates>
        <name>Assign_Health_grade</name>
        <label>Assign Health grade</label>
        <locationX>380</locationX>
        <locationY>815</locationY>
        <inputAssignments>
            <field>Health_Score_Grade__c</field>
            <value>
                <elementReference>CalculateHealthScore</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>update_tech_fee</name>
