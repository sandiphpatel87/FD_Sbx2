        <locationX>314</locationX>
        <locationY>539</locationY>
        <connector>
            <targetReference>Assign_Health_grade</targetReference>
        </connector>
        <inputAssignments>
            <field>Tech_Fee_To_Budget_Ratio__c</field>
            <value>
                <elementReference>CalculateTechFee</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>update_tech_fee_0</name>
        <label>update tech fee 0</label>
        <locationX>50</locationX>
        <locationY>539</locationY>
        <connector>
            <targetReference>Assign_Health_grade</targetReference>
        </connector>
        <inputAssignments>
            <field>Tech_Fee_To_Budget_Ratio__c</field>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
