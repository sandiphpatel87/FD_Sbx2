        <locationX>374</locationX>
        <locationY>276</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>If_blank</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.GTM_API_ID__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Measurement_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Standard</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_a_case</targetReference>
            </connector>
            <label>If blank</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>checkifwebsiteverifiedand8hourspass</name>
        <dataType>Boolean</dataType>
        <expression>AND(
    TEXT({!$Record.Website_Verified__c}) = &quot;Verified&quot;,
    ISBLANK({!$Record.GTM_API_ID__c}),
    NOW() - {!$Record.LastModifiedDate} &gt;= (8 / 24)
)</expression>
    </formulas>
    <formulas>
