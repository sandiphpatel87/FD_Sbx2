            <conditions>
                <leftValueReference>$Record.Last_Day_of_Service__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <dateValue>2025-07-31</dateValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_stage_as_lost</targetReference>
            </connector>
            <label>Last day of service today ?</label>
