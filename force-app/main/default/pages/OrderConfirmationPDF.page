        <h2>PRODUCT DETAILS</h2>
        <div class="section" style="margin-bottom: 0px;">
            <table>
                <tr class="info" style="margin-top: 0px;">
                    <th>Product Name</th>
                    <th>Tech Fee</th>
                </tr>
                <apex:repeat var="a" value="{!lineItems}">
                    <tr class="info">
                        <td><apex:outputText value="{!a.Product2.Name}"/></td>
                        <td><apex:outputText value="${!a.MRR__c}"/></td>
                    </tr>
                </apex:repeat>  
            </table>
        </div>
        <div class="sectionDiv"> 
            <table>
                <tr class="info">
                    <td><span class="highlight">Order Date:</span></td>
                    <td class="myTd"><span>
                        <apex:outputText value="{0, date, M/d/yyyy}">
                            <apex:param value="{!NOW()}" />
                        </apex:outputText>
                        </span></td>
                </tr>
            </table>
            <table>
                <tr class="info">
                    <td><span class="highlight">Total:</span></td>
                    <td class="myTd"><span>${!total}</span></td>
                </tr>
            </table>
            
        </div>
        
        <h2>ADDENDUM</h2>
        <div class="section">
            <p class="info">
                <apex:repeat var="a" value="{!lineItems}">
                    <span class="highlight" style="display: contents;">{!a.Product2.Name} - Service Term: </span>{!a.Product2.Addendum_Language__c}
                    <br/><br/>
                </apex:repeat>                
            </p>            
            <apex:outputpanel rendered="{!specialNotes != ''}">
                <p class="info">
                    <span class="highlight" style="display: contents;">Additional Terms: </span>{!specialNotes}<br/>
                </p>
            </apex:outputpanel>
        </div>
        
        <div class="footer">
            &copy;{!YEAR(TODAY())} Foundation Direct. All rights reserved.
        </div>
    </div>
    
</apex:page>