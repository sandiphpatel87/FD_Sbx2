<apex:page controller="OrderConfirmationController"  renderAs="{!isPDF}">
    <apex:stylesheet value="{!$Resource.Order_Confirm_CSS}" />
    
    
    <div class="container">
        
        
        <table >
            <tr >
                <td class="myLogo">  <img src="{!$Resource.FD_logo_loginPage}" alt="Company Logo" /></td>
